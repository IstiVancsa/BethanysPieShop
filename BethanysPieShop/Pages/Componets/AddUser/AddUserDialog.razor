@using Microsoft.AspNetCore.Components.Forms;
@inherits AddUserDialogBase

@if (ShowDialog)
{
    <div class="modal fade show d-block" id="exampleModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="titleLabel">Employee Quick Add</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" @onclick="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <EditForm Model="@User" OnValidSubmit="@HandleValidSubmit">

                        <DataAnnotationsValidator/>
                        <ValidationSummary/>

                        <div class="form-group">
                            <label for="username">Username: </label>
                            <InputText id="username" class="form-control" @bind-Value="@User.Username" placeholder="Enter username"></InputText>
                            @*<ValidationMessage For="@(() => User.Username)" />*@
                        </div>

                        <div class="form-group">
                            <label for="password">Password: </label>
                            <InputText id="password" class="form-control" @bind-Value="@User.Password" placeholder="Enter password"></InputText>
                            @*<ValidationMessage For="@(() => User.Password)" />*@
                        </div>

                        <div class="form-group">
                            <label for="age">Age: </label>
                            <InputNumber id="age" class="form-control" @bind-Value="@User.Age" placeholder="Enter age"></InputNumber>
                            @*<ValidationMessage For="@(() => User.Age)" />*@
                        </div>
                        <button type="submit" class="btn btn-primary">Save User</button>
                        <a class="btn btn-outline-primary" @onclick="Close">Close</a>
                    </EditForm>

                </div>
            </div>
        </div>
    </div>
}
