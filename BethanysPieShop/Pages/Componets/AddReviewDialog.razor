@inherits AddReviewDialogBase

@if (ShowDialog)
{
    <div class="modal fade show d-block" id="exampleModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="titleLabel">Employee Quick Add</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" @onclick="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <EditForm Model="@Review" OnValidSubmit="@HandleValidSubmit">

                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        <div class="form-group">
                            <label for="lastName">Review Comment: </label>
                            <InputText id="lastName" class="form-control" @bind-Value="@Review.ReviewComment" placeholder="Enter Review Comment"></InputText>
                            <ValidationMessage For="@(() => Review.ReviewComment)" />
                        </div>

                        <div class="form-group">
                            <label for="firstName">User Id: </label>
                            <InputText id="firstName" class="form-control" @bind-Value="@Review.IdDisplayed" placeholder="Enter User Id"></InputText>
                            <ValidationMessage For="@(() => Review.IdDisplayed)" />
                        </div>

                        <div class="form-group">
                            <label for="email">Stars: </label>
                            <InputNumber id="email" class="form-control" @bind-Value="@Review.Stars" placeholder="Enter Stars"></InputNumber>
                            <ValidationMessage For="@(() => Review.Stars)" />
                        </div>
                        <button type="submit" class="btn btn-primary">Save user</button>
                        <a class="btn btn-outline-primary" @onclick="@Close">Close</a>
                    </EditForm>

                </div>
            </div>
        </div>
    </div>
}